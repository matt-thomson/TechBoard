<Window x:Class="SoundBoard.App.AddBlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Block" 
        Height="250"
        Width="250" 
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox Name="BlockTypesList" 
                 ItemsSource="{Binding BlockTypes.Values}" 
                 Grid.Row="0"
                 Margin="2">
        </ListBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="24" Margin="2" Content="OK" Click="HandleOKButtonClick" />
            <Button Grid.Column="1" Height="24" Margin="2" Content="Cancel" Click="HandleCancelButtonClick" />
        </Grid>
    </Grid>
</Window>