<UserControl x:Class="SoundBoard.WPF.RangeBlockPropertyEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" DataContextChanged="HandleDataContextChanged">
    <Grid Width="238">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="Label" Grid.Column="0" Content="{Binding Property.Name}"/>
        <Slider Name="Field"
                Grid.Column="1"
                Margin="2" 
                Minimum="0"
                Maximum="1" 
                IsSnapToTickEnabled="True"
                TickFrequency="0.1"
                TickPlacement="TopLeft" 
                IsMoveToPointEnabled="True" />
    </Grid>
</UserControl>
